<%- include('../../Layouts/Admin_partials/_Head.ejs') %>

    </head>

    <body>
        <div class="main-wrapper">
            <%- include('../../Layouts/Admin_partials/_Topbar.ejs') %>
                <%- include('../../Layouts/Admin_partials/_Sidebar.ejs') %>
                    <div class="page-wrapper">
                        <div class="content">
                            <div class="row">
                                <div class="col-sm-4 col-3">
                                    <h4 class="page-title">Permissions
                                    </h4>
                                </div>
                                <div class="col-sm-8 col-9 text-right m-b-20">
                                    <a href="/permission-create" class="btn btn btn-primary btn-rounded float-right"><i
                                            class="fa fa-plus"></i>
                                        Add Permission</a>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="">
                                        <table class="table table-striped custom-table">
                                            <thead>
                                                <tr>
                                                    <th>#</th>
                                                    <th>Name</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% let index=1; %>
                                                    <% for(let permission of permissions) {%>
                                                        <tr>
                                                            <td>
                                                                <%= index %>
                                                            </td>
                                                            <td>
                                                                <%= permission.name %>
                                                            </td>

                                                            <% if(permission.status==0){ %>
                                                                <td>
                                                                    <span
                                                                        class="custom-badge status-red">Inactive</span>
                                                                </td>
                                                                <% } else { %>
                                                                    <td>
                                                                        <span
                                                                            class="custom-badge status-green">Active</span>
                                                                    </td>
                                                                    <% } %>
                                                                        <td>
                                                                            <div class="dropdown dropdown-action">
                                                                                <a href="#"
                                                                                    class="action-icon dropdown-toggle"
                                                                                    data-toggle="dropdown"
                                                                                    aria-expanded="false"><i
                                                                                        class="fa fa-ellipsis-v"></i></a>
                                                                                <div
                                                                                    class="dropdown-menu dropdown-menu-right">
                                                                                    <a class="dropdown-item"
                                                                                        href="/permission-edit/<%= permission.id%>"><i
                                                                                            class="fa fa-pencil m-r-5"></i>
                                                                                        Edit</a>
                                                                                    <a class="dropdown-item" href="#"
                                                                                        data-toggle="modal"
                                                                                        data-target="#delete_permission-<%=permission.id%>"><i
                                                                                            class="fa fa-trash-o m-r-5"></i>
                                                                                        Delete</a>
                                                                                </div>
                                                                            </div>
                                                                        </td>
                                                        </tr>
                                                        <div id="delete_permission-<%=permission.id%>"
                                                            class="modal fade delete-modal" role="dialog">
                                                            <div class="modal-dialog modal-dialog-centered">
                                                                <div class="modal-content">
                                                                    <div class="modal-body text-center">
                                                                        <form action="/permission-delete" method="post">
                                                                            <img src="assets/img/sent.png" alt=""
                                                                                width="50" height="46">
                                                                            <h3>Are you sure want to delete this
                                                                                Appointment?</h3>
                                                                            <input type="hidden" name="id"
                                                                                value="<%= permission.id%>">
                                                                            <div class="m-t-20"> <a href="#"
                                                                                    class="btn btn-white"
                                                                                    data-dismiss="modal">Close</a>
                                                                                <button type="submit"
                                                                                    class="btn btn-danger">Delete</button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <% index++; %>
                                                            <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
        </div>
        </div>
        <%- include('../../Layouts/Admin_partials/_FooterScript.ejs') %>
    </body>